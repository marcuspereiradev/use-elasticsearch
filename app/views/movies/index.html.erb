<p id="notice"><%= notice %></p>

<h1>Movies</h1>
<%= form_tag(movies_path, method: :get, class: "form-inline", role: 'search') do %>
  <div>              
    <%= text_field_tag :term, 
        params[:term], 
        id: 'movies_search', 
        autocomplete: :off, 
        placeholder: 'Search', 
        class: 'form-control' %>
    <div>
      <%= link_to 'Clear', root_url, class: "btn btn-default" %>
      <%= submit_tag 'Search', name: nil, class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Released</th>
      <th>Runtime</th>
      <th>Plot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.released %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.plot %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
